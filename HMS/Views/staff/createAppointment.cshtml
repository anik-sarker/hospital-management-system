                @Html.DropDownList("PatientsId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PatientsId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorsId, "DoctorsId", htmlAttributes: new { @class = "control-label col-md-2" })
